@model SliderVM
@{
    ViewData["Title"] = "Detail";
}

@section css{
	<style>

		a {
			font-size: 16px !important;
			padding: 10px 21px !important;
		}

		input {
			font-size: 18px !important;
			font-weight: 600 !important;
		}
	</style>
}

<div class="container my-5">
	<h1 class="text-center mt-3 mb-5">Detail</h1>
	<div class="mt-3">
		<img src="~/assets/img/slider/@Model.Image" style="width:18%" />
	</div>


	<div class="form-group mt-3">
		<label for="formFile" class="form-label my-2">Title</label>
		<input class="form-control" id="customFile" disabled asp-for="@Model.Title" />
	</div>

	<div class="mt-3">
		@Model.CreateDate.ToString("dd/MM/yyyy")
	</div>

	<div class="back mt-2">
		<a class="btn btn-light text-white" asp-action="Index">Back</a>
	</div>


</div>

