@model CollectionEditVM
@{
    ViewData["Title"] = "Edit";
}

@section css{
    <style>


        input {
            font-size: 18px !important;
            font-weight: 600 !important;
        }

        textarea {
            height: 200px !important;
            font-size: 17px !important;
        }
    </style>
}

<div class="container my-5">
    <h1 class="text-center mt-3 mb-3">Edit</h1>
    
    <form class="forms-sample" asp-action="Edit" method="post" enctype="multipart/form-data">
        
        <div class="form-group">
            <label style="padding-left:6px;" for="formFile" class="form-label my-2">Add Title</label>
            <input class="form-control" id="customFile" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label style="padding-left:6px;" for="formFile" class="form-label my-2">Add Description</label>
            <textarea class="form-control" id="customFile" asp-for="Description"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

