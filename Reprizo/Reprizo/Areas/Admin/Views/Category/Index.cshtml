@model List<CategoryVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <h1 class="text-center mt-3 mb-3">Categories</h1>
    <a class="btn btn-success text-white" asp-action="Create" style="float:right">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Created Date
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr data-id="@category.Id">
                        <td class="py-1">
                            <img src="~/assets/img/category/@category.Image" style="width:200px;height:120px;border-radius:0" alt="image" />
                        </td>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            @category.CreateDate.ToString("dd/MM/yyyy")
                        </td>

                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@category.Id">Detail</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                            <form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@category.Id">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>

                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>


