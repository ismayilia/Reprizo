@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

@section css{
    <link rel="stylesheet" href="~/assets/css/register.css">
}

<main>

    <!-- Banners -->

    <section id="banner">
        <div class="banner-all" style="background-image: url(/assets/img/settings/@ViewBag.RegisterBanner);">
            <h1>Register</h1>
        </div>
    </section>

    <!-- Register -->

    <section id="register">
        <div class="container">
            <div class="register-all">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card  text-black" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-2 mt-md-2 pb-1">

                                    <h2 class=" fw-bold mb-3 text-uppercase">Register</h2>
                                    <div style="color:red" ; asp-validation-summary="All"></div>
                                    <form method="post" asp-controller="Account" asp-action="Register">
                                        <div class="form-outline form-white mb-2">
                                            <label asp-for="FullName">Full name:</label>
                                            <input class="form-control form-control-sm" asp-for="FullName">
                                            <span style="color:red; margin-bottom:10px" asp-validation-for="FullName"></span>
                                        </div>

                                        <div class="form-outline form-white mb-2">
                                            <label asp-for="UserName">Username:</label>
                                            <input class="form-control form-control-sm" asp-for="UserName">
                                            <span style="color:red; margin-bottom:10px" asp-validation-for="UserName"></span>
                                        </div>
                                        <div class="form-outline form-white mb-2">
                                            <label asp-for="Email">Email:</label>
                                            <input class="form-control form-control-sm" asp-for="Email">
                                            <span style="color:red; margin-bottom:10px" asp-validation-for="Email"></span>
                                        </div>

                                        <div class="form-outline form-white mb-2">
                                            <label asp-for="Password">Password:</label>
                                            <input class="form-control form-control-sm" asp-for="Password">
                                            <span style="color:red; margin-bottom:10px" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="form-outline form-white mb-2">
                                            <label asp-for="ConfirmPassword">Confirm password:</label>
                                            <input class="form-control form-control-sm" asp-for="ConfirmPassword">
                                            <span style="color:red; margin-bottom:10px" asp-validation-for="ConfirmPassword"></span>
                                        </div>



                                        <button class="btn btn-sm mt-2 px-5" type="submit">Register</button>


                                    </form>

                                </div>

                                <div>
                                    <p class="mb-0 mt-3">
                                        Have already an account? <a asp-action="Login" class="text-dark-50 fw-bold">Login</a>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



</main>

@section script{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/assets/js/register.js"></script>

    }


