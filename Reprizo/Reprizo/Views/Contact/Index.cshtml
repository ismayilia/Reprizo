@model ContactVM

@{
	ViewData["Title"] = "Index";
}

@section css{
	<link rel="stylesheet" href="~/assets/css/contact.css">
}

<main>

	<!-- Banners -->

	<section id="banner">
		<div class="banner-all" style="background-image: url(/assets/img/settings/@Model.ContactBanner);">
			<h1>Contacts</h1>
		</div>
	</section>

	<!-- Contacts -->

	<section id="contacts">
		<div class="container">
			<div class="contacts-all">
				<div class="row">
					<div class="col-lg-3 col-md-6 col-sm-12">
						<div class="contact">
							<h1>Address</h1>
							<p style="width: 60%;margin: 0 auto;line-height: 34px;">
								@Model.Address
							</p>
						</div>
					</div>
					<div class="col-lg-3 col-md-6 col-sm-12">
						<div class="contact">
							<h1>Phone</h1>
							<p><a href="tel:1(800)1234567">@Model.PhoneOne</a></p>
							<p><a href="tel:18001234568">@Model.PhoneTwo</a></p>
						</div>
					</div>
					<div class="col-lg-3 col-md-6 col-sm-12">
						<div class="contact">
							<h1>Mail</h1>
							<p><a href="mailto:sales@yoursite.com">@Model.MailOne</a></p>
							<p><a href="mailto:hr@yoursite.com">@Model.MailTwo</a></p>
						</div>
					</div>
					<div class="col-lg-3 col-md-6 col-sm-12">
						<div class="contact">
							<h1>Hours</h1>
							<p>@Model.WeekDays</p>
							<p>@Model.Weekends</p>
						</div>
					</div>
				</div>
			</div>
		</div>

	</section>

	<!-- Message -->

	<section id="messages">
		<div class="container">
			<h1>Drop a Line</h1>
			<form asp-action="CreateMessage" method="post" id="message-form">
				<div class="message-all">
					<div class="row">
						<div class="col-lg-6">
							<div class="name-email">
								<input asp-for="@Model.ContactMessage.Name" type="text" name="name" required placeholder="Your Name">
							</div>
						</div>
						<div class="col-lg-6">
							<div class="name-email">
								<input asp-for="@Model.ContactMessage.Email" type="email" name="email" required placeholder="Your Email">
							</div>
						</div>
					</div>
					<div class="phone">
						<input asp-for="@Model.ContactMessage.Phone" type="tel" name="phone" required placeholder="Your Phone">
					</div>
					<div class="message">
						<textarea asp-for="@Model.ContactMessage.Message" name="message" cols="30" rows="10" required placeholder="Your Message"></textarea>
					</div>
					<button type="submit" id="message-form">SEND MESSAGE</button>
				</div>
			</form>

		</div>
	</section>

	<!-- Map -->

	<section id="maps">
		<div class="container">
			<div class="map w-100">
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.4284905030036!2d49.85137057521392!3d40.37719495804588!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d079efb5163%3A0xc20aa51a5f0b5e01!2sCode%20Academy!5e0!3m2!1sen!2saz!4v1703577980136!5m2!1sen!2saz" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
		</div>
	</section>

</main>

@section script{
	<script src="~/assets/js/contact.js"></script>
}

