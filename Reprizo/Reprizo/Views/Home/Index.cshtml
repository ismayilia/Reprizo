                    <div class="carousel-inner">
                        @foreach (var item in Model.Sliders)
                        {

                            <div class="carousel-item @(item.IsMain ? "active" : "") slider-image" data-bs-interval="10000">

                                <div class="image">
                                    <img src="~/assets/img/slider/@item.Image" class="d-block w-100 firefly" alt="...">

                                </div>
                                <div class="text">
                                    <h1>@item.Title</h1>

                                </div>
                            </div>
                        }
                        
