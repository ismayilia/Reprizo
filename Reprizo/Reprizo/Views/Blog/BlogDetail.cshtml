@model BlogVM
@{
    ViewData["Title"] = "BlogDetail";
}

@section css{
    <link rel="stylesheet" href="~/assets/css/blogdetail.css">
}

<main>
    <!-- Banners Blog Detail-->

    <section id="banner">
        <div class="banner-all" style="background-image: url(/assets/img/settings/@ViewBag.BlogDetailBanner);">
            <h1>Blog Detail</h1>
        </div>
    </section>



    <section id="blog-detail">
        <div class="container">
            <div class="blog-all">
                <div class="blog">
                    <div class="image">
                        <img src="~/assets/img/blog/@Model.Image" alt="">
                    </div>
                    <div class="title">
                        <span>@Model.CreateDate.ToString("MMMM ,d yyyy")</span>
                        <span>BY @Model.Writer</span>
                        <h1>@Model.Title</h1>
                    </div>
                    <div class="content">
                        <p>
                            @Model.Description
                        </p>
                    </div>

                    <div class="social">
                        <a href="https://www.facebook.com/login.php?skip_api_login=1&api_key=966242223397117&signed_next=1&next=https%3A%2F%2Fwww.facebook.com%2Fsharer.php%3Fu%3Dhttps%253A%252F%252Fnew-reprizo.shopify.axiomthemes.com%252Fblogs%252Fwatches%252Fwhat-type-of-metal-will-you-choose&cancel_url=https%3A%2F%2Fwww.facebook.com%2Fdialog%2Fclose_window%2F%3Fapp_id%3D966242223397117%26connect%3D0%23_%3D_&display=popup&locale=en_US"><i class="fa-brands fa-square-facebook"></i> SHARE</a>
