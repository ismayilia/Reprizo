                        <a href="https://www.pinterest.com/pin/create/button/?url=https://new-reprizo.shopify.axiomthemes.com/blogs/watches/what-type-of-metal-will-you-choose&media=//new-reprizo.shopify.axiomthemes.com/cdn/shop/articles/image-2-copyright_1024x1024.jpg?v=1624457678&description=What%20Type%20of%20Metal%20Will%20You%20Choose?"><i class="fa-brands fa-pinterest"></i> PIN IT</a>

                    </div>


                </div>
            </div>
        </div>
    </section>
</main>

@section script{
    <script src="~/assets/js/blog.js"></script>
}

