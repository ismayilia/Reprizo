
@{
    ViewData["Title"] = "Index";
}

@section css{
    <link rel="stylesheet" href="~/assets/css/cart.css">
}

<main>

    <!-- Banners -->

    <section id="banner">
        <div class="banner-all" style="background-image: url(/assets/img/settings/cartbanner.jpg);">
            <h1>Your cart</h1>
        </div>
    </section>

    <!-- Cart -->

    <section id="carts">
        <div class="container">
            <div class="cart-all">
                <div class="empty">
                    <h1>Your Cart</h1>
                    <p>Your cart is currently empty.</p>
                    <a asp-controller="Shop" asp-action="Index">CONTINUE SHOPPING</a>
                </div>

                <div class="cart-table d-none">
                    <h1>Your Cart</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Count</th>
                                <th>Price</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img src="~/assets/img/product/fast1.jpg">
                                </td>
                                <td>Saat1</td>
                                <td><i class="fa-solid fa-minus"></i> <span>1</span> <i class="fa-solid fa-plus"></i></td>
                                <td>110$</td>
                                <td>110$</td>
                                <td>
                                    <button type="submit" class="btn btn-outline-danger delete-basket-item">Delete</button>
                                </td>
                            </tr>

                        </tbody>

                    </table>
                    <div class="grand-total mt-5">
                        <span>Grand total: 110 $</span>
                    </div>
                </div>

            </div>
        </div>
    </section>


</main>


@section script{
    <script src="~/assets/js/cart.js"></script>
}
